<% include ./partials/header %>
<div class="row">
    <div class="col-md-12">
        <form class="form-signin" action="/register" method="POST">
            <h1 class="h3 mb-3 font-weight-normal">Please sign up</h1>
            <label for="inputUsername"></label>
            <input type="text" id="inputUsername" class="form-control" name="username" placeholder="Username" required autofocus>
            <label for="inputPassword"></label>
            <input type="password" id="inputPassword" class="form-control" name="password" placeholder="Password" required>
			<label for="inputFirstName"></label>
            <input type="text" id="inputFirstName" class="form-control"  name="firstName" placeholder="First name" required>
			<label for="inputLastName"></label>
            <input class="form-control" id="inputLastName" type="text" name="lastName" placeholder="Last name" required>
			<label for="inputEmail"></label>
            <input class="form-control" id="inputEmail" type="email" name="email" placeholder="Email" required>
			<label for="inputAvatar"></label>
            <input class="form-control" id="inputAvatar" type="text" name="avatar" placeholder="Avatar url" required>
			<label for="inputAdminCode"></label>
            <input class="form-control" id="inputAdminCode" type="text" name="adminCode" placeholder="Admin Code">
			<label for="inputButton"></label>	
			<button class="btn btn-lg btn-primary btn-block" type="submit">Sign up</button>	
        </form>
            <div class="form-signin">
                <a href="/campgrounds">Go Back</a>
            </div>
        </div>
    </div>
<% include ./partials/footer %>