<% include ../partials/header %>

<div class="card mx-auto" style="width: 18rem;">
  <img src=" <%=user.avatar %>" alt="user profile image" class="card-img-top">
  <div class="card-body">
    <h5 class="card-title"><%= user.firstName + " " + user.lastName%></h5>
    <p class="card-text"><i class="far fa-envelope-open"></i> <a href="mail to: <%= user.email %>"><%= user.email %></a></p>
	  <h5><%= user.username %>'s campgrounds:</h5>
		  <% campgrounds.forEach(function(campground) { %>
		  <a href="/campgrounds/<%=campground.id%>"><%= campground.name %></a>
		  <% }); %>
  </div>
</div>

<% include ../partials/footer %>